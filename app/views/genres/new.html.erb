<h2 class="text-center">ジャンルを登録しよう</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:genre, url: genre_path) do |f| %>
    
      <%= f.label :genre %>
      <%= f.select :genre, [["基礎スキー"],["フリースタイル"],["アルペン"],["モーグル"]],:prompt => "選択してください" %>
      
      <%= f.submit "登録", class: "btn btn-primary" %>
      
    <% end %>
  </div>
</div>

