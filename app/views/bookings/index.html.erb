<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <% day_count = 1 %>
                <% @bookings.each do |booking| %>
                    <div class="well">
                        <h3>設定日<%= day_count %></h3>
                        <p>レッスン日時：<%= booking.lesson_time %></p>
                        <p>レッスン最大人数：<%= booking.how_many %>人</p>
                        <p>レッスン料金：<%= booking.fee %>円</p>
                        <p>現在の申し込み人数：<%= booking.reserved_count %>人</p>
                        <%= link_to "このレッスンの詳細", "/booking/show/#{booking.id}", class: "btn btn-primary" %>
                    </div>
                    <% day_count += 1 %>
                <% end %>
        </div>
    </div>
</div>